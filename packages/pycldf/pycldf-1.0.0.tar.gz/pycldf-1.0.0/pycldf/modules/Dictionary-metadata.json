{
    "@context": [
        "http://www.w3.org/ns/csvw",
        {
            "@language": "en"
        }
    ],
    "dc:conformsTo": "http://cldf.clld.org/v1.0/terms.rdf#Dictionary",
    "dialect": {
        "doubleQuote": false,
        "commentPrefix": null,
        "trim": true
    },
    "tables": [
        {
            "url": "entries.csv",
            "dc:conformsTo": "http://cldf.clld.org/v1.0/terms.rdf#EntryTable",
            "tableSchema": {
                "columns": [
                    {
                        "name": "ID",
                        "propertyUrl": "http://purl.org/dc/terms/identifier",
                        "datatype": {"base": "string"},
                        "required": true
                    },
                    {
                        "name": "Language_ID",
                        "propertyUrl": "http://linguistics-ontology.org/gold/2010/Language",
                        "required": true,
                        "datatype": "string"
                    },
                    {
                        "name": "headword",
                        "datatype": "string",
                        "propertyUrl": "http://purl.org/linguistics/gold/OrthographicWord",
                        "required": true
                    },
                    {
                        "name": "part_of_speech",
                        "datatype": "string",
                        "propertyUrl": "http://purl.org/linguistics/gold/PartOfSpeechProperty"
                    }
                ]
            }
        },
        {
            "url": "senses.csv",
            "dc:conformsTo": "http://cldf.clld.org/v1.0/terms.rdf#SenseTable",
            "tableSchema": {
                "columns": [
                    {
                        "name": "ID",
                        "propertyUrl": "http://purl.org/dc/terms/identifier",
                        "datatype": {"base": "string"},
                        "required": true
                    },
                    {
                        "name": "description",
                        "datatype": "string",
                        "propertyUrl": "http://purl.org/linguistics/gold/LexicalizedConcept",
                        "separator": ";",
                        "required": true
                    },
                    {
                        "name": "entry_ID",
                        "datatype": "string",
                        "required": true
                    }
                ],
               "foreignKeys": [
                   {
                        "columnReference": "entry_ID",
                        "reference": {
                            "resource": "entries.csv",
                            "columnReference": "ID"
                        }
                    }
               ]
            }
        }
    ]
}
