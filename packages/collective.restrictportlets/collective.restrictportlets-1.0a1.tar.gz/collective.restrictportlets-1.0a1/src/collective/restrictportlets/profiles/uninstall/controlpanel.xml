<?xml version="1.0"?>
<object
    name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="collective.restrictportlets">

    <configlet
        title="Restrict portlets"
        action_id="collective.restrictportlets.settings"
        appId="collective.restrictportlets"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@restrict-portlets-controlpanel"
        icon_expr="string:${portal_url}/product_icon.png"
        visible="False"
        remove="true"
        i18n:attributes="title">
            <permission>Manage portal</permission>
    </configlet>

</object>
