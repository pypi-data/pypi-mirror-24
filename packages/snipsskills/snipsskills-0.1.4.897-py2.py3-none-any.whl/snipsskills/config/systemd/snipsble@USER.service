[Unit]
Description=Snips BLE
After=snipsble.service

[Service]
Type=simple
User=%i
ExecStartPre=/bin/sleep 30
ExecStart={{SNIPSBLE_PATH}}/index.js --serviceUUID={{SNIPS_BLE_SERVICE_UUID}} --characteristicUUID={{SNIPS_BLE_CHARACTERISTIC_UUID}} {{SNIPS_MQTT_HOSTNAME}} {{SNIPS_MQTT_PORT}}

[Install]
WantedBy=multi-user.target